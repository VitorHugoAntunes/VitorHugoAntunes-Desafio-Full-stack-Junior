{
  "name": "desafio-full-stack-junior",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:gateway": "turbo run dev --filter=api-gateway",
    "dev:auth": "turbo run dev --filter=auth-service",
    "dev:tasks": "turbo run dev --filter=tasks-service",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test:backend:e2e": "turbo run test:e2e --filter=api-gateway",
    "test:backend:unit": "turbo run test --filter=api-gateway",
    "db:clear": "turbo run db:clear --filter=api-gateway",
    "db:seed": "turbo run db:seed --filter=api-gateway",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "migration:generate": "turbo run migration:generate",
    "migration:generate:auth": "turbo run migration:generate --filter=auth-service",
    "migration:generate:tasks": "turbo run migration:generate --filter=tasks-service",
    "migration:generate:notifications": "turbo run migration:generate --filter=notifications-service",
    "migration:create": "turbo run migration:create",
    "migration:create:auth": "turbo run migration:create --filter=auth-service",
    "migration:create:tasks": "turbo run migration:create --filter=tasks-service",
    "migration:create:notifications": "turbo run migration:create --filter=notifications-service",
    "migration:run": "turbo run migration:run",
    "migration:run:auth": "turbo run migration:run --filter=auth-service",
    "migration:run:tasks": "turbo run migration:run --filter=tasks-service",
    "migration:run:notifications": "turbo run migration:run --filter=notifications-service",
    "migration:revert": "turbo run migration:revert",
    "migration:revert:auth": "turbo run migration:revert --filter=auth-service",
    "migration:revert:tasks": "turbo run migration:revert --filter=tasks-service",
    "migration:revert:notifications": "turbo run migration:revert --filter=notifications-service",
    "migration:show": "turbo run migration:show",
    "migration:show:auth": "turbo run migration:show --filter=auth-service",
    "migration:show:tasks": "turbo run migration:show --filter=tasks-service",
    "migration:show:notifications": "turbo run migration:show --filter=notifications-service"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@faker-js/faker": "^10.0.0",
    "@nestjs/testing": "^11.1.6",
    "@rocketseat/eslint-config": "^2.2.2",
    "@swc/core": "^1.3.78",
    "@vitest/coverage-v8": "^0.34.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "prettier": "^3.4.2",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.8",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "unplugin-swc": "^1.5.7",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "dayjs": "^1.11.18",
    "zod": "^4.1.12",
    "zod-validation-error": "^4.0.2"
  }
}
